package com.dataStucture.ElementaryDataStructures.array.rotation;

/*
Input arr[] = [1, 2, 3, 4, 5, 6, 7]
out put arr[] = [3, 4, 5, 6, 7, 1, 2]
we are going to follow rotate the are with the help of temp array who's size is 2
*/

public class RotateArray {
	public static String rotateArrayWithTempArray(Integer array[], int tempSize) {
	 
		int j =0;
		while (j< tempSize) {
	
		for (int i = tempSize; i < array.length; i++) {
			System.out.println();
			int k = array[i];
			System.out.print(k + " ");
		  }
		}
		return "";
	}

	public static void main(String[] args) {
		Integer array[] = { 1, 2, 3, 4, 5, 6, 7 };
		int tempSize = 2;
		rotateArrayWithTempArray(array, tempSize);
	}
}
