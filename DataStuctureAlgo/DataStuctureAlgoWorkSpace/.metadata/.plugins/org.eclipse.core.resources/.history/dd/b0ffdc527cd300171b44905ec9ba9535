			System.out.print(array[i] + " ");
		}
	}

	public static void main(String[] args) {

		Integer array[] = { 1, 2, 3, 4, 5, 6, 7 };
		int arraySize = array.length;
		int tempSize = 2;
		rotateArray(array, tempSize, arraySize);
	}
}
