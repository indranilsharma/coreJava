package com.Thread.advance.lock;

class Display {
	
	//if we make synchronized then only one thread can able to excute at atime 
	public synchronized void wish(String name) {
		for (int i = 0; i < 10; i++) {
			System.out.print("Good morning: ");
			try {
				Thread.sleep(2000);

			} catch (InterruptedException e) {
				e.printStackTrace();
			}
			System.out.println(name);
		}
	}
}

class MyThread extends Thread {

	Display d;
	String name;

	public MyThread(Display d, String name) {
		this.d = d;
		this.name = name;
	}

	public void run() {
		d.wish(name);
	}
}

public class Synchonised_demo {

	public static void main(String[] args) {

		Display d = new Display();

		MyThread t1 = new MyThread(d, "Jack");
		MyThread t2 = new MyThread(d, "Jill");

		// so both thread want to conquerre the wish() method and get mixed output
  		t1.start();
		t2.start();

	}

}
