package com.Thread.AdvancedMultithreding.ThreadGroup;

public class ThreadGroupDemo3 {
	public static void main(String[] args) {
		ThreadGroup group = new ThreadGroup("subGr 1");
		Thread t1 = new Thread(group, "thread 1");
		Thread t2 = new Thread(group, "thread2");
		Thread t3 = new Thread(group, "thread3");

		ThreadGroup group2 = new ThreadGroup(group, "subGr 2");
		Thread t4 = new Thread(group2, "thread4");

		System.out.println(Thread.currentThread().getThreadGroup().activeGroupCount());
		//System.out.println(Thread.currentThread().getThreadGroup());
		Thread.currentThread().getThreadGroup().list();
		
		
	}
}
