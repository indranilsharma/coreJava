package com.Thread.AdvancedMultithreding.ThreadGroup;
/*
 * 
 * 
 * java.lang.ThreadGroup[name=main,maxpri=10]           main thread group
    Thread[main,5,main]                                 main thread
    java.lang.ThreadGroup[name=subGr 1,maxpri=10]       subgroup 1
        java.lang.ThreadGroup[name=subGr 2,maxpri=10]   subgroup 2
 * 
 * 
 * */
public class ThreadGroupDemo3 {
	public static void main(String[] args) {
		ThreadGroup group = new ThreadGroup("subGr 1");
		Thread thread1 = new Thread(group, "thread 1");
		Thread thread2 = new Thread(group, "thread2");
		Thread thread3 = new Thread(group, "thread3");

		ThreadGroup group2 = new ThreadGroup(group, "subGr 2");
		Thread thread4 = new Thread(group2, "thread4");

		//int count = Thread.currentThread().getThreadGroup().activeGroupCount();
		System.out.println(Thread.currentThread().getThreadGroup().activeGroupCount());
		//System.out.println(Thread.currentThread().getThreadGroup());
		Thread.currentThread().getThreadGroup().list();
		
		
	}
}
