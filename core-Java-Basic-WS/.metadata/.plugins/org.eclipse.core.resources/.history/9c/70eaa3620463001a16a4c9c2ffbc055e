<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.bharatthippireddy.com/Patient"
	xmlns:pat="http://www.bharatthippireddy.com/Patient"
	elementFormDefault="qualified">
	
	<!--if i make unqualified this pat: will apper in every single tag -->

	<element name="Patient" type="pat:Patient" />

	<complexType name="Patient">
		<sequence>
			<element name="id" type="pat:ID" />
			<element name="name" type="pat:String15Length" />
			<element name="age" type="int" />
			<element name="dob" type="date" />
			<element name="email" type="pat:Email" />
			<element name="gender" type="pat:Gender" />
			<element name="phone" type="string" />
			<element name="payment" type="pat:PaymentType"/>
		</sequence>
	</complexType>

	<complexType name="PaymentType">
		<choice>
			<element name="cash" type="int" />
			<element name="insurance" type="pat:Insurance" />
		</choice>
	</complexType>

	<complexType name="Insurance">
		<all>
			<element name="provider" type="string" />
			<element name="limit" type="int" />
		</all>
	</complexType>


	<simpleType name="ID">
		<restriction base="int">
			<pattern value="[0-5]"></pattern>
		</restriction>
	</simpleType>

	<simpleType name="String15Length">
		<restriction base="string">
			<maxLength value="5" />
		</restriction>
	</simpleType>

	<simpleType name="Gender">
		<restriction base="string">
			<enumeration value="M" />
			<enumeration value="F" />
		</restriction>
	</simpleType>

	<simpleType name="Email">
		<restriction base="string">
			<pattern value="[^@]+@[^\.]+\..+" />
		</restriction>
	</simpleType>

</schema>