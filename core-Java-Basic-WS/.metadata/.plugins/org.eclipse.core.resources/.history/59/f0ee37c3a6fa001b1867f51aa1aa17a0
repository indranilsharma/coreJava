package com.Thread.advance.synchronised;

class DisplayDemoTwo {
	public synchronized void displayOne() {
		for (int i = 0; i < 10; i++) {
			System.out.print(i);
			try {
				Thread.sleep(2000);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}

	public synchronized void displayTwo() {
		for (int i = 65; i < 75; i++) {
			System.out.print((char) i);
			try {
				Thread.sleep(2000);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}
}

class MythreadOne extends Thread {

	DisplayDemoTwo d;

	public MythreadOne(DisplayDemoTwo d) {
		this.d = d;
	}

	@Override
	public void run() {
		d.displayOne();
	}
}

class MythreadTwo extends Thread {

	DisplayDemoTwo d;

	public MythreadTwo(DisplayDemoTwo d) {
		this.d = d;
	}

	@Override
	public void run() {
		d.displayTwo();
	}
}

public class SynchronizedDemoTwo {
	public static void main(String[] args) {
		DisplayDemoTwo d = new DisplayDemoTwo();
		MythreadOne t1 = new MythreadOne(d);
		MythreadTwo t2 = new MythreadTwo(d);
		t1.start();
		t2.start();
	}
}
