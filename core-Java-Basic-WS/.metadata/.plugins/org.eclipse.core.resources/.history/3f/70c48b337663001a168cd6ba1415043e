package com.Thread.advance.lock;

import java.util.concurrent.locks.ReentrantLock;

class Display_1 {

	ReentrantLock l = new ReentrantLock();

	/*
	 * if we uded insteed of synchronized ReentrantLock and use lock() and
	 * unlock method then only one thread can able to execute at at a ime
	 */
	public void wish(String name) {
		l.lock();
		for (int i = 0; i < 5; i++) {
			System.out.print("Good morning: ");
			try {
				Thread.sleep(1000);

			} catch (InterruptedException e) {
				e.printStackTrace();
			}
			System.out.println(name);
		}
		l.unlock();
	}
}

class MyThread_1 extends Thread {

	Display_1 d;
	String name;

	public MyThread_1(Display_1 d, String name) {
		this.d = d;
		this.name = name;
	}

	public void run() {
		d.wish(name);
	}
}

public class Synchonised_demo_reentarent_lock {

	public static void main(String[] args) {

		Display_1 d = new Display_1();

		MyThread_1 t1 = new MyThread_1(d, "Jack");
		MyThread_1 t2 = new MyThread_1(d, "Jill");
		MyThread_1 t2 = new MyThread_1(d, "Romeo");


		/*
		 * so both thread want to conquerre the wish() method and get mixed
		 * output
		 */
		t1.start();
		t2.start();

	}

}
